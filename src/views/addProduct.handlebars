<section class="container">
    <h1>Agregar productos</h1>
    <h2>Por favor agregue el producto</h2>
    <form id="addProductForm">
        <label class="info">Titulo del producto</label>
        <input type="text" name="title" id="title" required>
        <br>
        <label class="info">Describir</label>
        <input type="text" name="description" id="description" required>
        <br>
        <label class="info">Code</label>
        <input type="text" name="code" id="code" required>
        <br>
        <label class="info">Precio</label>
        <input type="number" name="price" id="price" required>
        <br>
        <label class="info">Estado</label>
        <br>
        <input type="radio" id="status_true" name="status" value=true>
        <label for="status_true">true</label><br>
        <input type="radio" id="status_false" name="status" value=false>
        <label for="status_false">false</label><br>
        <br>
        <label class="info">Stock</label>
        <input type="number" name="stock" id="stock" required>
        <br>
        <label class="info">Categoria</label>
        <input type="text" name="category" id="category" required>
        <br>
        <label class="info">Due√±o</label>
        <input type="text" name="owner" id="owner" required readonly>
        <br>
        <label class="info">Imagenes</label>
        <input name="thumbnails" id="thumbnails">
        <br>

    </form>
    <br>
    <button type="submit" form="addProductForm">Agregar</button>
</section>
<br>
